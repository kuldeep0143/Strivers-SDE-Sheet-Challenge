class Solution {
    public int longestConsecutive(int[] A) {
     Set <Integer> set= new HashSet<>();
        for (int x:A){
            set.add(x);
        }
        int longest=0;

        for(int n:A){
            if(!set.contains(n-1)){
                int length=0;
                while(set.contains(n+length)){
                    length++;
                }
                longest=Math.max(longest,length);
            }

        }
        return longest;
    }}
